        <from>/icubSim/cam/right</from>
        <to>/imgR:i</to>
        <protocol>tcp</protocol>
  </connection>
  <connection>
        <from>/icubSim/cam/right</from>
        <to>/imgR:i</to>
        <protocol>tcp</protocol>
  </connection> -->

</application>
